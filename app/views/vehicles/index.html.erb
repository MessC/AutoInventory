<p id="notice"><%= notice %></p>

<title>Automobile Inventory</title>

<h1>Listing Vehicles in Inventory</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Mileage</th>
      <th>Transmission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.category %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.mileage %></td>
        <td><%= vehicle.transmission %></td>
        <td><%= link_to 'Show Vehicle', vehicle %></td>
        <td><%= link_to 'Edit Vehicle', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Delete Vehicle', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

